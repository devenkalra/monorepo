# =============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Django Core Settings
# -----------------------------------------------------------------------------
DJANGO_SECRET_KEY=CHANGE_THIS_TO_A_LONG_RANDOM_STRING_50_CHARS_MIN
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=bldrdojo.com,www.bldrdojo.com
DJANGO_CSRF_TRUSTED_ORIGINS=https://bldrdojo.com,https://www.bldrdojo.com
DJANGO_SETTINGS_MODULE=config.settings

# -----------------------------------------------------------------------------
# Database Configuration (PostgreSQL)
# -----------------------------------------------------------------------------
POSTGRES_DB=entitydb
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD_20_CHARS_MIN
DATABASE_URL=postgresql://postgres:CHANGE_THIS_SECURE_PASSWORD_20_CHARS_MIN@db:5432/entitydb

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_20_CHARS_MIN
REDIS_URL=redis://:CHANGE_THIS_REDIS_PASSWORD_20_CHARS_MIN@redis:6379/0

# -----------------------------------------------------------------------------
# MeiliSearch Configuration
# -----------------------------------------------------------------------------
MEILI_MASTER_KEY=CHANGE_THIS_MEILISEARCH_KEY_16_CHARS_MIN
MEILISEARCH_URL=http://meilisearch:7700

# -----------------------------------------------------------------------------
# Neo4j Configuration
# -----------------------------------------------------------------------------
NEO4J_USER=neo4j
NEO4J_PASSWORD=CHANGE_THIS_NEO4J_PASSWORD_20_CHARS_MIN
NEO4J_URI=bolt://neo4j:7687

# -----------------------------------------------------------------------------
# Vector Service Configuration
# -----------------------------------------------------------------------------
VECTOR_SERVICE_URL=http://vector-service:5000

# -----------------------------------------------------------------------------
# JWT Configuration
# -----------------------------------------------------------------------------
JWT_SECRET_KEY=CHANGE_THIS_JWT_SECRET_KEY_50_CHARS_MIN
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
CORS_ALLOWED_ORIGINS=https://bldrdojo.com,https://www.bldrdojo.com

# -----------------------------------------------------------------------------
# Email Configuration (Production)
# -----------------------------------------------------------------------------
# For Gmail:
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=noreply@bldrdojo.com

# For development/testing (console output):
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# -----------------------------------------------------------------------------
# Social Authentication - Google OAuth
# -----------------------------------------------------------------------------
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# -----------------------------------------------------------------------------
# Social Authentication - GitHub OAuth (Optional)
# -----------------------------------------------------------------------------
# Get these from: https://github.com/settings/developers
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# -----------------------------------------------------------------------------
# Security Settings (Production)
# -----------------------------------------------------------------------------
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# -----------------------------------------------------------------------------
# Storage Configuration (Optional - for AWS S3)
# -----------------------------------------------------------------------------
# USE_S3=True
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=bldrdojo-media
# AWS_S3_REGION_NAME=us-east-1

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Backup Configuration
# -----------------------------------------------------------------------------
BACKUP_RETENTION_DAYS=30
