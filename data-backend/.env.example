# Django Configuration
DJANGO_SECRET_KEY=change-this-to-a-random-secret-key-in-production
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=bldrdojo.com,www.bldrdojo.com,localhost,127.0.0.1
DJANGO_SETTINGS_MODULE=config.settings

# Database Configuration
POSTGRES_DB=entitydb
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-this-secure-password
DATABASE_URL=postgresql://postgres:change-this-secure-password@db:5432/entitydb

# Redis Configuration
REDIS_PASSWORD=change-this-redis-password
REDIS_URL=redis://:change-this-redis-password@redis:6379/0

# MeiliSearch Configuration
MEILI_MASTER_KEY=change-this-meilisearch-master-key
MEILISEARCH_URL=http://meilisearch:7700

# Neo4j Configuration
NEO4J_USER=neo4j
NEO4J_PASSWORD=change-this-neo4j-password
NEO4J_URI=bolt://neo4j:7687

# Vector Service Configuration
VECTOR_SERVICE_URL=http://vector-service:5000

# Email Configuration (for production)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=noreply@bldrdojo.com

# Social Auth - Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Social Auth - GitHub OAuth (optional)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# JWT Configuration
JWT_SECRET_KEY=change-this-jwt-secret-key
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://bldrdojo.com,https://www.bldrdojo.com

# Security Settings
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Storage Configuration (for production with S3)
# USE_S3=True
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=bldrdojo-media
# AWS_S3_REGION_NAME=us-east-1

# Logging
LOG_LEVEL=INFO

# Backup Configuration
BACKUP_RETENTION_DAYS=30
